import <%= packageName %>.service.<%= entityClass %>QueryService;
<% } %>
import <%= packageName %>.service.dto.<%= entityClass %>Criteria;
import <%= packageName %>.service.filtering.QueryService;
<%- include('../../_partials/imperative/service/imports', this); -%>
import javax.persistence.EntityManager;
import javax.persistence.criteria.*;
import java.util.ArrayList;
import <%= packageName %>.domain.<%= entityClass%>_;
<%_ relationships.forEach((relationship) => { _%>
import <%= packageName %>.domain.<%= relationship.otherEntityNameCapitalized %>_;
<%_ }); _%>

@ApplicationScoped
<%_ if (databaseType === 'sql') { _%>
@Transactional
<%_ } _%>
public class <%= entityClass %>QueryService<% if (hasServiceImpl) { %>Impl<% } %> extends QueryService<<%= entityClass %>><% if (hasServiceImpl) { %> implements <%= entityClass %>QueryService<% } %> {

    private final Logger log = LoggerFactory.getLogger(<%= serviceClassName %>.class);
<%- include('../../_partials/imperative/common/inject', { ...this, viaService: false, constructorName: serviceClassName, queryService: false, isController: false}); -%>

    @Inject
    EntityManager entityManager;

<%- include('../../_partials/imperative/service/find_all_filtered', this); -%>
<%- include('../../_partials/imperative/service/count_filtered', this); -%>
<%- include('../../_partials/imperative/service/delete_filtered', this); -%>


    protected CriteriaQuery<<%= entityClass %>> createSelectCriteriaQuery(<%= entityClass %>Criteria criteria, Sort sort) {
        CriteriaQuery<<%= entityClass %>> query = entityManager.getCriteriaBuilder().createQuery(<%= entityClass %>.class);
        Root<<%= entityClass %>> from = query.from(<%= entityClass %>.class);

        return query.select(from).where(createPredicate(criteria, from)).orderBy(createOrderBy(sort, from));
    }

    protected CriteriaQuery<Long> createCountCriteriaQuery(<%= entityClass %>Criteria criteria) {
        CriteriaQuery<Long> query = entityManager.getCriteriaBuilder().createQuery(Long.class);
        Root<<%= entityClass %>> from = query.from(<%= entityClass %>.class);

        return query.select(entityManager.getCriteriaBuilder().count(from)).where(createPredicate(criteria, from));
    }

    protected CriteriaDelete<<%= entityClass %>> createDeleteCriteriaQuery(<%= entityClass %>Criteria criteria) {
        CriteriaDelete<<%= entityClass %>> criteriaDelete = entityManager.getCriteriaBuilder().createCriteriaDelete(<%= entityClass %>.class);
        Root<<%= entityClass %>> from = criteriaDelete.from(<%= entityClass %>.class);

        return criteriaDelete.where(createPredicate(criteria, from));
    }

    protected Predicate createPredicate(<%= entityClass %>Criteria criteria, Root<<%= entityClass %>> from) {
        List<Predicate> predicateList = new ArrayList<>();

        if (criteria != null) {
            if (criteria.getId() != null) {
                predicateList.add(<%= getCriteriaBuilder(primaryKeyType) %>(criteria.getId(), from.get(<%= entityClass %>_.id)));
            }
            <%_
            fields.forEach((field) => {
                if (isFilterableType(field.fieldType)) { _%>
            if (criteria.get<%= field.fieldInJavaBeanMethod %>() != null) {
                predicateList.add(<%= getCriteriaBuilder(field.fieldType) %>(criteria.get<%= field.fieldInJavaBeanMethod %>(), from.get(<%= entityClass %>_.<%= field.fieldName %>)));
            }
            <%_ }
            });

            relationships.forEach((relationship) => {
                const metamodelFieldName = relationship.relationshipFieldName; _%>
            if (criteria.get<%= relationship.relationshipNameCapitalized %>Id() != null) {
                predicateList.add(buildCriteria(criteria.get<%= relationship.relationshipNameCapitalized %>Id(),
                    from.join(<%= entityClass %>_.<%= metamodelFieldName %>, JoinType.LEFT).get(<%= relationship.otherEntityNameCapitalized %>_.id)));
            }
            <%_ }); // forEach
        _%>
            CriteriaBuilder criteriaBuilder = entityManager.getCriteriaBuilder();
            Predicate predicate = criteriaBuilder.and(predicateList.toArray(new Predicate[0]));

            if (criteria.getAnd() != null && !criteria.getAnd().isEmpty()) {
                Predicate predicateAnd = criteriaBuilder.and(criteria.getAnd().stream().map(c -> createPredicate(c, from)).toArray(Predicate[]::new));
                predicate = predicateList.isEmpty() ? predicateAnd : criteriaBuilder.and(predicate, predicateAnd);
            }

            if (criteria.getOr() != null && !criteria.getOr().isEmpty()) {
                Predicate predicateOr = criteriaBuilder.or(criteria.getOr().stream().map(c -> createPredicate(c, from)).toArray(Predicate[]::new));
                predicate = predicateList.isEmpty() && (criteria.getAnd() == null || criteria.getAnd().isEmpty()) ?
                    predicateOr : criteriaBuilder.or(predicate, predicateOr);
            }
            return predicate;
        }

        return entityManager.getCriteriaBuilder().conjunction();
    }
}

