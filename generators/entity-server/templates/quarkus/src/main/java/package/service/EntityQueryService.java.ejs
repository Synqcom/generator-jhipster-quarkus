package <%= packageName %>.service;

import <%= packageName %>.service.dto.<%= entityClass %>Criteria;
<%_ if (hasDto) { _%>
import <%= packageName %>.service.dto.<%= entityOrDtoClass %>;
<%_ } else { _%>
import <%= packageName %>.domain.<%= entityOrDtoClass %>;
<%_ } _%>
<%_ if (hasPagination) { _%>
import io.quarkus.panache.common.Page;
<%_ } _%>
import io.quarkus.panache.common.Sort;

import java.util.List;
import java.util.Optional;
<%_ if (databaseType === 'cassandra') { _%>
import java.util.UUID;
<%_ } _%>

/**
 * Service Interface for filtering {@link <%= packageName %>.domain.<%= entityClass %>}.
 */
public interface <%= entityClass %>QueryService extends BatchExecutionQueryServiceInterface<<%= entityOrDtoClass %>, <%= entityClass %>Criteria> {

    <%_ if (hasPagination) { _%>
    /**
     * Get all the <%= entityInstancePlural %>.
     * @param page the pagination information.
     * @return the list of entities.
     */
    Paged<<%= entityOrDtoClass %>> findAllByCriteria(<%= entityClass %>Criteria <%= entityInstance %>Criteria, Page page, Sort sort);
    <%_ } _%>

    /**
     * Get all the <%= entityInstancePlural %>.
     * @return the list of entities.
     */
    List<<%= entityOrDtoClass %>> findAllByCriteria(<%= entityClass %>Criteria <%= entityInstance %>Criteria, Sort sort);

    /**
    * Count all the <%= entityInstancePlural %>.
    * @return the count of entities.
    */
    Long countByCriteria(<%= entityClass %>Criteria <%= entityInstance %>Criteria);


    /**
     * Delete the <%= entityInstancePlural %>.
     * @return the count of deleted entities.
     */
    Long deleteByCriteria(<%= entityClass %>Criteria <%= entityInstance %>Criteria);
}
