package <%=packageName%>.service.exception;

import javax.ws.rs.core.Response;
import javax.ws.rs.ext.ExceptionMapper;
import javax.ws.rs.ext.Provider;
import java.io.Serializable;

/**
* Маппер исключений для пакетной модификации объектов
*/
@Provider
public class BatchExecutionExceptionHandler implements ExceptionMapper<BatchExecutionException> {

    @Override
    public Response toResponse(BatchExecutionException ex) {

        return Response.status(Response.Status.BAD_REQUEST).entity(new BatchExecutionExceptionResponse(ex.getMessage())).build();
    }

    public static class BatchExecutionExceptionResponse implements Serializable {

        public final String errorMessage;

        public BatchExecutionExceptionResponse(String errorMessage) {
            this.errorMessage = errorMessage;
        }
    }
}

