package <%=packageName%>.web.rest.errors;

import com.tietoevry.quarkus.resteasy.problem.ExceptionMapperBase;
import com.tietoevry.quarkus.resteasy.problem.HttpProblem;
import io.quarkus.arc.ArcUndeclaredThrowableException;

import javax.annotation.Priority;
import javax.ws.rs.Priorities;
import javax.ws.rs.core.Response;
import javax.ws.rs.ext.Provider;
import java.util.ArrayList;
import java.util.HashMap;
import java.util.List;
import java.util.Map;

/**
 * Exception Mapper for ArcUndeclaredThrowableException.
 * Adds 'causes' field into `application/problem` responses.
 */
@Provider
@Priority(Priorities.USER - 1)
public final class HibernateConstraintViolationExceptionMapper extends ExceptionMapperBase<ArcUndeclaredThrowableException> {

    @Override
    protected HttpProblem toProblem(ArcUndeclaredThrowableException exception) {
        List<Map<String, String>> causes = new ArrayList<>();
        Throwable throwable = exception.getCause();
        while (throwable != null) {
            Map<String, String> causeDetails = new HashMap<>();
            causeDetails.put("exceptionClass", throwable.getClass().getName());
            causeDetails.put("message", throwable.getMessage());
            causes.add(causeDetails);
            throwable = throwable.getCause();
        }
        return HttpProblem
            .builder()
            .withStatus(Response.Status.BAD_REQUEST)
            .withTitle(Response.Status.BAD_REQUEST.getReasonPhrase())
            .with("exceptionClass", ArcUndeclaredThrowableException.class.getName())
            .with("causes", causes)
            .build();
    }
}
